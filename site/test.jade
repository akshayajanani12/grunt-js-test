!!! 5
html(lang='en')
	head
		title= "JS Test Env: " + project.name + ": " + (all ? "All tests" : test.file)
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='')
		link(rel='stylesheet', href=defaultBaseUri + '/js-test-env/site.css', media='screen')
		link(rel='stylesheet', href=defaultBaseUri + '/js-test-env/mocha.css', media='screen')
		base(href=project.getBaseUri())
	body(data-modules=modules)
		div(id='mocha')

		//- global deps
		script(src=defaultBaseUri + '/js-test-env/mocha.js')
		script(src=defaultBaseUri + '/js-test-env/chai.js')
		script(src=defaultBaseUri + '/js-test-env/sinon.js')
		script(src=defaultBaseUri + '/js-test-env/shared.js')

		//- Inject HTML
		div!= injectHTML

		//- project deps
		- if (project.deps) {
			- project.deps.forEach(function (dep) {
				script(src=dep)
			- })
		- }

		//- test-specific deps, test file should be last in list
		- for (var i=0; i<deps.length; i++) {
			script(src=deps[i])
		- }
